							"    var employeeId = responseData.id;\r",
							"    pm.environment.set(\"employeeId\", employeeId);\r",
							"});\r",
							"\r",
							"console.log(pm.request.body.raw);\r",
							"console.log(pm.response.json());\r",
							"\r",
							"\r",
