							"console.log(\"Name:\", pm.iterationData.get(\"name\"));\r",
							"console.log(\"Salary:\", pm.iterationData.get(\"salary\"));\r",
							"console.log(\"Age:\", pm.iterationData.get(\"age\"));\r",
							"\r",
