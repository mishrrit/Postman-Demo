    "item": [
        {
            "name": "GET Users",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "https://reqres.in/api/users?page=2",
                    "protocol": "https",
                    "host": [
                        "reqres",
                        "in"
                    ],
                    "path": [
                        "api",
                        "users"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "2"
                        }
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
